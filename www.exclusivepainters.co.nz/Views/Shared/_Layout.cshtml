<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Exclusive Painters</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .product {
            padding-top: 50px;
            padding-bottom: 50px;
            background-image: url('.../../Content/Images/section/section_bg02.jpg');
        }

        .product_title {
            display: flex;
            justify-content: center;
            color: #000019;
            border-bottom: 2px solid#000000;
            margin-bottom: 50px;
            font-size: 3rem;
            font-weight: 800;
            line-height: 1;
        }

        .product-marginbtm50 {
            margin-bottom: 120px;
        }

        .col-sm-4 > img {
            width: 100%;
        }

        .row_poster {
            max-height: 100px;
            object-fit: contain;
            transition: transform 450ms;
        }

            .row_poster:hover {
                transform: scale(1.08);
                opacity: 1;
            }

        .container-fluid {
            padding-left: 0px;
            padding-right: 0px;
        }

        .cool-link::after {
            content: '';
            display: block;
            width: 0;
            height: 2px;
            background: #000;
            transition: width .3s;
        }

        .cool-link:hover::after {
            width: 100%;
            /*transition: width .3s;*/
        }

        .scrolling-active {
            background-color: #f5f5f5;
            box-shadow: 0 3px 1rem rgba(0,0,0,.1);
            z-index: 1; /* always gona be on the top*/
            /* Animation */
            transition-timing-function: ease-in;
            transition: all 0.5s;
        }

            .scrolling-active .nav {
                height: 4.1rem;
                /*height: 6.6rem;**/
            }

        .navbar-inverse {
            border: 0px;
            border-bottom: 1px solid#111;
        }

        .getQuotationBtn, .loginBtn {
            margin-right: 20px;
            margin-top: 12px;
            padding-top: 13px !important;
            padding-bottom: 13px !important;
            line-height: 0 !important;
            font-size: 14px !important;
            border-radius: 10px;
            border: none;
        }

        .banner {
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            object-fit: contain;
            height: 500px;
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            background-image: url('.../../Content/Images/banners/8.jpg');
        }

        .banner_contents {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 250px;
            margin-left: 30%;
            margin-right: 30%;
            padding: 20px;
        }

        .banner_title {
            margin-bottom: 20px;
            border-radius: 10px;
            background-color: rgba(51, 51, 51, 0.5);
            text-transform: uppercase;
            font-size: 34px;
            text-align: center;
            font-size: 3rem;
            font-weight: 800;
            color: white;
            align-content: center;
            padding-bottom: 0.3rem;
        }

        .banner_button {
            cursor: pointer;
            color: white;
            outline: none;
            border: none;
            font-weight: 700;
            border-radius: 0.2vw;
            padding-left: 2rem;
            padding-right: 2rem;
            margin-right: 1rem;
            padding-top: 0.5rem;
            background-color: rgba(51, 51, 51, 0.5);
            padding-bottom: 0.5rem;
        }

            .banner_button:hover {
                color: #000;
                background-color: #e6e6e6;
                transition: all 0.2s;
            }

        .banner_fadeBottom {
            height: 7.4rem;
            background-image: linear-gradient( 180deg, transparent, rgba(37, 37, 37, 0.61), #111 );
        }

        .slider_area {
            width: 100%
        }

            .slider_area .carousel-inner .item > img {
                width: 1200px;
                object-fit: contain;
                justify-content: center;
            }

        .single-cat {
            border: 1px solid #e1ebf7;
            border-radius: 6px;
            padding: 61px 22px;
            transition: all .4s ease-out 0s;
            position: relative;
            z-index: 1;
        }


        .mb-50 {
            margin-bottom: 50px;
        }

        .w-padding2 {
            padding-top: 130px;
            padding-bottom: 125px;
        }

        .contact-info-area h3 {
            font-size: 48px;
            display: block;
            color: #000a2d;
            font-weight: 600;
            margin-top: 0px;
            font-style: normal;
            margin-bottom: 40px;
            font-family: Rufina,serif;
            line-height: 1.2;
        }

        .contact-info-area p {
            font-family: Rubik,sans-serif;
            color: #10285d;
            font-size: 16px;
            line-height: 30px;
            margin-bottom: 40px;
            font-weight: normal;
        }

        .contact-info-area .contact-wrapper input {
            background: #fff;
            height: 60px;
            width: 100%;
            padding: 10px 26px;
            color: #a3a3a3;
            font-weight: 500;
            text-transform: capitalize;
            border-radius: 0px;
            border: 0;
            margin-bottom: 30px;
        }

        .contact-wrapper textarea {
            color: #a3a3a3;
            background: #fff;
            font-weight: 500;
            letter-spacing: 2px;
            text-transform: capitalize;
            height: 160px;
            width: 100%;
            padding: 30px 26px;
            border-radius: 0px;
            border: 0;
            margin-bottom: 30px;
        }

        .submit-btn2 {
            background: #ec5b53;
            width: 100%;
            height: 60px;
            padding: 10px 20px;
            border: 0;
            color: #fff;
            text-transform: capitalize;
            cursor: pointer;
            font-size: 16px;
            border-radius: 0px;
        }


        .navbar-header {
            padding: 12px;
        }

        .logo {
            position: fixed;
            left: 20px;
            width: 130px;
            top: 0;
            object-fit: contain;
        }

        #margin100 {
            margin-left: 100px;
        }

        .navbar {
            background-color: white !important;
        }

        .scrolling-slide {
            background-color: transparent;
        }

        .marginRight10 {
            margin-left: 30px;
            margin-right: 10px;
            color: #4b4b4b;
            display: inline-flex;
            font-size: 14px;
            line-height: 1.5;
            font-family: 'Poppins',sans-serif;
            text-decoration: none;
        }

        .marginBottom20 {
            margin-bottom: 30px;
        }

        .hoverLine:hover {
            text-decoration-line: none;
        }

        .hoverLine {
        }
    </style>
</head>
<body>
    <header>

        <div class="navbar navbar-inverse navbar-fixed-top nav" style="background-color:inherit">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")">
                        <img class="logo nav" src="~/Content/Images/logo/logo.png" alt="" />
                    </a>
                    <!--   @Html.ActionLink("Exclusive Painters", "Index", "Home", new { @class = "navbar-brand nav " }) -->
                </div>

                <div id="margin100" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "cool-link" })</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle cool-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Interior Painting", "InteriorPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Exterior Painting", "ExteriorPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Roof Painting", "RoofPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Renovation Work", "RenovatedWord", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("About Us", "About", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Career", "Career", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Testimonial", "Testimonial", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "cool-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav  navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Home", new { @class = "btn btn-danger loginBtn" })</li>
                        <li>@Html.ActionLink("Get Free Quote", "GetFreeQuote", "Home", new { @class = "btn btn-danger btn-xm getQuotationBtn" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <script>
        window.addEventListener("scroll", function () {
            window.addEventListener("scroll", function () {
                let header = document.querySelector("header");
                header.classList.toggle('scrolling-active', window.scrollY > 100);
            })
    </script>
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>

            <div class="footer-bottom">
                <div class="container">
                    <div class="row">

                        <div class="col-sm-6">
                            <h3>Contact</h3>
                            <ul style="display:grid;">
                                <li class="glyphicon glyphicon-map-marker marginBottom20"><span class="marginRight10 "> Mount Albert,<br>Auckland NZ</span></li>
                                <li class="glyphicon glyphicon-earphone marginBottom20"><a class="hoverLine" href="tel:0225276078" style="border:none;"><span class=" marginRight10"> Phone<br>0225276078</span></a></li>
                                <li class=" glyphicon glyphicon-envelope  marginBottom20"><a class="hoverLine" href="mailto:exclusivepaintersltd@gmail.com" style="border:none;"><span class="marginRight10"> Email <br> exclusivepaintersltd@gmail.com</span></a></li>
                            </ul>

                        </div>
                        <div class="col-sm-6">
                            <div class="row" style="margin-top:25px">
                                <div class="col-sm-4 row_poster" style="margin-top:30px;"><img src="~/Content/Images/paintingbrand/master painter.png" /></div>
                                <div class="col-sm-4 row_poster"><img src="~/Content/Images/paintingbrand/5year warranty.png" /></div>
                                <div class="col-sm-4 row_poster" style="margin-top:30px;"><img src="~/Content/Images/paintingbrand/ecodec.png" /></div>
                            </div>
                        </div>


                    </div>
                    <ul style="list-style:none;display:flex;justify-content:center">
                        <li style="margin-right:50px">
                            <i style="text-align:center">&copy; Copyright @DateTime.Now.Year - Exclusive Painters</i>
                        </li>
                        <li style="margin-right:40px">
                           <a href="https://www.facebook.com/exlcusive.painters" class="hoverLine"> <i class="fa fa-facebook-square" style="font-size:20px"></i></a>
                        </li>
                        <li style="margin-right:40px">
                            <i class="fa fa-instagram" style="font-size:20px"></i>
                        </li>
                        <li>
                            <i class="fa fa-google-plus" style="font-size:20px"></i>
                        </li>
                        <li>
                            <a class="hoverLine marginRight10" href="mailto:pankajpuri019@gmail.com"> <span>Marketing Page Designed By:Pankaj Puri</span></a>
                        </li>
                    </ul>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
