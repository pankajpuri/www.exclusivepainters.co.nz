<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Exclusive Painters</title>
    @Styles.Render("~/Content/css")
    <link href=@Url.Content("~/Content/font-awesome.css") rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
<link href=@Url.Content("~/Content/custom.css") rel="stylesheet" />
</head>
<body>
    <header>

        <div class="navbar navbar-inverse navbar-fixed-top nav" style="background-color:inherit">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")">
                        <img class="logo nav" src="~/Content/Images/logo/logo.png" alt="" />
                    </a>
                    <!--   @Html.ActionLink("Exclusive Painters", "Index", "Home", new { @class = "navbar-brand nav " }) -->
                </div>

                <div id="margin100" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "cool-link" })</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle cool-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Interior Painting", "InteriorPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Exterior Painting", "ExteriorPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Roof Painting", "RoofPainting", "Home")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Renovation Work", "RenovatedWord", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("About Us", "About", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Career", "Career", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Testimonial", "Testimonial", "Home", new { @class = "cool-link" })</li>
                        <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "cool-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav  navbar-right">
                        <li>@Html.ActionLink("Login", "Login", "Home", new { @class = "btn btn-danger loginBtn" })</li>
                        <li>@Html.ActionLink("Get Free Quote", "GetFreeQuote", "Home", new { @class = "btn btn-danger btn-xm getQuotationBtn" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <script>
        window.addEventListener("scroll", function () {
            window.addEventListener("scroll", function () {
                let header = document.querySelector("header");
                header.classList.toggle('scrolling-active', window.scrollY > 100);
            })
    </script>
    <div class="container-fluid">
        @RenderBody()
        <hr style="border:none"/>
        <footer>

            <div class="footer-bottom">
                <div class="container">
                    <div class="row">
                        <h3>Contact</h3>
                        <div class="col-xs-6 col-md-4">

                            <ul style="display:grid;">
                                <li class="glyphicon glyphicon-map-marker marginBottom20"><span class="marginRight10 "> Mount Albert,<br>Auckland NZ</span></li>
                                <li class="glyphicon glyphicon-earphone marginBottom20"><a class="hoverLine" href="tel:0225276078" style="border:none;"><span class=" marginRight10"> Phone<br>0225276078</span></a></li>
                                <li class=" glyphicon glyphicon-envelope  marginBottom20"><a class="hoverLine" href="mailto:exclusivepaintersltd@gmail.com" style="border:none;"><span class="marginRight10"> Email <br> exclusivepaintersltd@gmail.com</span></a></li>
                            </ul>

                        </div>
                        <div class="col-xs-12 col-md-8">
                            <div class="row">
                                <div class="col-md-4" alt="" style="margin:10px;"><img class="row_poster" src="~/Content/Images/paintingbrand/master painter.png" alt="" /></div>
                                <div class="col-md-4" alt="" style="margin:10px;"><img class="row_poster" src="~/Content/Images/paintingbrand/5year warranty.png" alt="" /></div>
                                <div class="col-md-2"alt="" style="margin:10px;"><img class="row_poster" src="~/Content/Images/paintingbrand/ecodec.png" alt=""/></div>
                            </div>
                        </div>


                    </div>
                    <ul style="list-style:none;display:flex;justify-content:center">
                        <li style="margin-right:50px">
                            <i style="text-align:center">&copy; Copyright @DateTime.Now.Year - Exclusive Painters</i>
                        </li>
                        <li style="margin-right:40px">
                           <a href="https://www.facebook.com/exlcusive.painters" class="hoverLine"> <i class="fa fa-facebook-square" style="font-size:20px"></i></a>
                        </li>
                        <li style="margin-right:40px">
                            <i class="fa fa-instagram" style="font-size:20px"></i>
                        </li>
                        <li>
                            <i class="fa fa-google-plus" style="font-size:20px"></i>
                        </li>
                        <li>
                            <a class="hoverLine marginRight10" href="mailto:pankajpuri019@gmail.com"> <span>Marketing Page Designed By:Pankaj Puri</span></a>
                        </li>
                    </ul>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
